@model IEnumerable<UserData>

    @*Home Section*@
<section class="home" id="home">
    @foreach(var obj in Model){
        <div class="social">
            <a href="https://github.com/Leonard1z"><i class='bx bxl-github'></i></a>
            <a href="https://www.linkedin.com/in/leonard-zaberxha-7b6503207/"><i class='bx bxl-linkedin'></i></a>
            <a href="https://www.google.com/gmail/about/"><i class='bx bxl-gmail'></i></a>
        </div>
        <div class="home-img">
            <img src="/images/123.png" alt="">
        </div>
        <div class="home-text">
            <span>Hello, I'm</span>
            <h1>@obj.Name @obj.LastName</h1>
            <h2>@obj.Work</h2>
            <p>@obj.Description</p>
            <a href="#contact" class="btn">Contact Me</a>
        </div>
        }
</section>

@*About Section*@
<section class="about" id="about">
    @foreach(var obj in Model){
    <div class="heading">
        <h2>About Me</h2>
        <span>Introduction</span>
    </div>
    <div class="about-container">
        <div class="about-img">
            <img src="/images/profile.jpg" alt="">
        </div>
        <div class="about-text">
            <p>@obj.Description</p>
            <div class="information">
                <div class="info-box">
                    <i class='bx bxs-user'></i>
                        <span>@obj.Name @obj.LastName</span>
                </div>
                <div class="info-box">
                    <i class='bx bxs-phone'></i>
                        <span>@obj.TelephoneNumber</span>
                </div>
                <div class="info-box">
                    <i class='bx bxs-envelope'></i>
                        <span>@obj.Email</span>
                </div>
            </div>
            <a href="#" class="btn">Download Cv</a>
        </div>
    </div>
    }
</section>

